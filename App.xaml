<Application x:Class="Culteries.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Culteries"
             StartupUri="AuthorizationWindow.xaml">
    <Application.Resources>
        <Brush x:Key="BackgroundColor">#FFFFFF</Brush>
        <Brush x:Key="AdditionalBackgroundColor">#76E383</Brush>
        <Brush x:Key="AccentColor">#498C51</Brush>


        <Style TargetType="Label">
            <Setter Property="Margin" Value="12, 0, 0, 0"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="BasedButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
        </Style>

    </Application.Resources>
</Application>
